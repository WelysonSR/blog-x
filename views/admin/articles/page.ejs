<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/homenavbar.ejs')%>
<div class="container">
   
    <% result.articles.rows.forEach(article =>{ %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                
                <a href="/<%= article.slug %>" class="btn btn-primary">Leia mias</a>
            </div>
        </div><br>
    <% }) %>
    
    <nav aria-label="Navegação de página">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <% if(result.page > 2){ %>
                    <a class="page-link" href="/articles/page/<%= result.page-1 %>" tabindex="-1">Anterior</a>
                <% }else if(result.page == 2){ %>
                    <a class="page-link" href="/" tabindex="-1">Anterior</a>
                <% } %>
            </li>
            <% if(result.next == true){ %>
            <li class="page-item">
                <a class="page-link" href="/articles/page/<%= result.page+1 %>">Próximo</a>
            </li>
            <% }else{%>
                <li class="page-item disabled">
                    <a class="page-link" href="/articles/page/<%= result.page+1 %>">Próximo</a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>
<%- include ('../../partials/footer.ejs')%>