<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>
<div class="container">
    <h3 class="float-left">Usuários</h3>
    <a class="btn btn-primary float-right" href="/admin/users/create">Novo usuário</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=> { %>
                <tr>
                    <th scope="row">
                        <%= user.id %>
                    </th>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <!--<td>
                        <a href="/admin/categories/edit/<%= user.id %>" class="btn btn-outline-warning">Editar</a>
                        <form method="POST" action="/categories/delete/<%= user.id %>" style="display: inline;"
                            onsubmit="confirmDeletion(event, this)">
                            <button class="btn btn-outline-danger">Deletar</button>
                        </form>
                    </td>-->
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>

<script>
    function confirmDeletion(event, form) {
        event.preventDefault();
        let decision = confirm("Deseja excluir a categoria?");
        if (decision) {
            form.submit();
        }
    }
</script>
